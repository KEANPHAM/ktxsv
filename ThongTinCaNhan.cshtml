@model KTXSV.Models.User
@{
    ViewBag.Title = "Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bao quanh toàn bộ container để canh giữa -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #fff8f0;">
    <div style="width: 100%; max-width: 500px;">

        <h2 class="text-center mb-4" style="color: #FF6700; font-weight:bold;">Thông Tin Cá Nhân</h2>

        <!-- Card hiển thị thông tin -->
        <div class="card shadow-lg border border-3" style="border-color:#FF6700; border-radius: 20px; background-color: #ffffff; padding: 30px;">
            <table class="table table-borderless mb-0">
                <tr>
                    <th class="fw-bold"><i class="fa fa-user me-2" style="color:#FF6700;"></i>Họ tên</th>
                    <td>@Model.FullName</td>
                </tr>
                <tr>
                    <th class="fw-bold"><i class="fa fa-venus-mars me-2" style="color:#FF6700;"></i>Giới tính</th>
                    <td>@Model.Gender</td>
                </tr>
                <tr>
                    <th class="fw-bold"><i class="fa fa-envelope me-2" style="color:#FF6700;"></i>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th class="fw-bold"><i class="fa fa-phone me-2" style="color:#FF6700;"></i>Số điện thoại</th>
                    <td>@Model.Phone</td>
                </tr>
            </table>

            <div class="text-center mt-4">
                <a href="@Url.Action("ChinhSuaThongTin", "SinhVien")" class="btn btn-lg text-white" style="background: linear-gradient(45deg, #FF6700, #FFA500); border-radius: 50px; padding: 10px 30px; font-weight:bold;">
                    <i class="fa fa-edit me-2"></i>Chỉnh sửa
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Chèn Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- Hiệu ứng hover cho button -->
<style>
    .btn:hover {
        transform: scale(1.05);
        transition: 0.3s;
    }
</style>
