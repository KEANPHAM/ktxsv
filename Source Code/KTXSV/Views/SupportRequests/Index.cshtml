@model IEnumerable<KTXSV.Models.SupportRequest>

@{
    ViewBag.Title = "Danh sách yêu cầu hỗ trợ";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Tạo yêu cầu mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>Người gửi</th>
        <th>Phòng</th>
        <th>Tiêu đề</th>
        <th>Trạng thái</th>
        <th>Ngày tạo</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.User.FullName</td>
            <td>@item.Room.RoomNumber</td>
            <td>@item.Title</td>
            <td>@item.Status</td>
            <td>@item.CreatedAt.ToString()</td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.RequestID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.RequestID })
            </td>
        </tr>
    }
</table>
