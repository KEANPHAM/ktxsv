@model KTXSV.Models.SupportRequest

@{
    ViewBag.Title = "Chi tiết yêu cầu hỗ trợ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@if (Model != null)
{
    <div class="card mt-4 shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Người gửi:</dt>
            <dd class="col-sm-9">@Model.User.FullName</dd>

            <dt class="col-sm-3">Phòng:</dt>
            <dd class="col-sm-9">@Model.Room.RoomNumber</dd>

            <dt class="col-sm-3">Tiêu đề:</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Nội dung:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString()</dd>
        </dl>
    </div>

    <div class="mt-3">
        @Html.ActionLink("← Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
else
{
    <p class="text-danger">Không tìm thấy yêu cầu hỗ trợ.</p>
}
