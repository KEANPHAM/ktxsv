@{
    ViewBag.Title = "Home Page";
}
<style>


    .carousel-inner {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 16px rgba(0,0,0,0.3);
    }

    .carousel-item img {
        width: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .carousel-item.active img {
        transform: scale(1.02);
    }

</style>
