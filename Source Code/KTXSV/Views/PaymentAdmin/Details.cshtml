@model KTXSV.Models.Payment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Chi tiết hóa đơn</h2>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mã hóa đơn</dt>
        <dd class="col-sm-9">@Model.PaymentID</dd>

        <dt class="col-sm-3">Sinh viên</dt>
        <dd class="col-sm-9">@Model.Registration?.User?.FullName</dd>

        <dt class="col-sm-3">Phòng</dt>
        <dd class="col-sm-9">@Model.Registration?.Room?.RoomNumber</dd>

        <dt class="col-sm-3">Loại</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Số tiền</dt>
        <dd class="col-sm-9">@String.Format("{0:N0}", Model.Amount) VNĐ</dd>

        <dt class="col-sm-3">Ngày thanh toán</dt>
        <dd class="col-sm-9">@Model.PaymentDate?.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PaymentID }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ms-2" })
</div>
