<div class="container mt-4">
    <h2>Hóa đơn của tôi</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead class="table-dark">
            <tr>
                <th>Mã HĐ</th>
                <th>Loại</th>
                <th>Số tiền</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.PaymentID</td>
                    <td>@p.Type</td>
                    <td>@p.Amount.ToString("N0") VNĐ</td>
                    <td>@p.PaymentDate?.ToShortDateString()</td>
                    <td>@p.Status</td>
                    <td>
                        @if (p.Status == "Unpaid")
                        {
                            <button class="btn btn-success btn-sm">Thanh toán</button>
                        }
                        else
                        {
                            <span class="text-muted">Đã thanh toán</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

