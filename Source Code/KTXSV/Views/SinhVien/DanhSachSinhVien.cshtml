﻿@{
    ViewBag.Title = "Danh sách sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var sinhViens = ViewBag.SinhViens as List<Dictionary<string, string>> ?? new List<Dictionary<string, string>>();
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    body {
        background-color: #fff4e6;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #ff7b00;
        font-weight: 700;
    }

    .card {
        background-color: #ffffff;
        border-radius: 15px;
        border: none;
        box-shadow: 0 0 15px rgba(255, 123, 0, 0.2);
        margin-bottom: 20px;
    }

    dt {
        color: #ff7b00;
        font-weight: 600;
    }

    dd {
        color: #333;
    }

    .btn-primary {
        background-color: #ff7b00;
        border-color: #ff7b00;
    }

        .btn-primary:hover {
            background-color: #e66a00;
        }

    .btn-success {
        background-color: #fff;
        border: 2px solid #ff7b00;
        color: #ff7b00;
    }

        .btn-success:hover {
            background-color: #ff7b00;
            color: #fff;
        }

    .icon {
        color: #ff7b00;
        margin-right: 8px;
        font-size: 1.1rem;
    }
</style>

<h2 class="text-center mb-4"><i class="bi bi-people-fill icon"></i>Danh sách sinh viên</h2>

<div class="text-center mb-4">
    <a href="@Url.Action("ThemSinhVienMoi", "SinhVien")" class="btn btn-success px-4">
        <i class="bi bi-person-plus"></i> Thêm sinh viên mới
    </a>
</div>

@foreach (var sv in sinhViens)
{
    <div class="card shadow-sm p-4">
        <dl class="row mb-0">
            <dt class="col-5"><i class="bi bi-upc icon"></i>Mã sinh viên:</dt>
            <dd class="col-7">@sv["MaSoSinhVien"]</dd>

            <dt class="col-5"><i class="bi bi-person-fill icon"></i>Họ tên:</dt>
            <dd class="col-7">@sv["HoTen"]</dd>

            <dt class="col-5"><i class="bi bi-book icon"></i>Ngành học:</dt>
            <dd class="col-7">@sv["NganhHoc"]</dd>

            <dt class="col-5"><i class="bi bi-gender-ambiguous icon"></i>Giới tính:</dt>
            <dd class="col-7">@sv["GioiTinh"]</dd>

            <dt class="col-5"><i class="bi bi-calendar3 icon"></i>Ngày sinh:</dt>
            <dd class="col-7">@DateTime.Parse(sv["NgaySinh"]).ToString("dd/MM/yyyy")</dd>

            <dt class="col-5"><i class="bi bi-telephone icon"></i>Số điện thoại:</dt>
            <dd class="col-7">@sv["SoDienThoai"]</dd>

            <dt class="col-5"><i class="bi bi-envelope icon"></i>Email:</dt>
            <dd class="col-7">@sv["Email"]</dd>

            <dt class="col-5"><i class="bi bi-geo-alt icon"></i>Địa chỉ:</dt>
            <dd class="col-7">@sv["DiaChi"]</dd>
        </dl>

        <div class="text-center mt-3">
            <a href="@Url.Action("ThongTinCaNhan", "SinhVien", new { id = sv["MaSoSinhVien"] })" class="btn btn-primary px-4 me-2">
                <i class="bi bi-person-circle"></i> Xem chi tiết
            </a>
            <a href="@Url.Action("ChinhSuaThongTin", "SinhVien", new { id = sv["MaSoSinhVien"] })" class="btn btn-primary px-4">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
}