﻿@{
    ViewBag.Title = "Thêm sinh viên mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var nganhList = ViewBag.NganhList as List<string>;
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    body {
        background-color: #fff4e6;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #ff7b00;
        font-weight: 700;
    }

    .card {
        background-color: #fff;
        border-radius: 15px;
        border: none;
        box-shadow: 0 0 15px rgba(255, 123, 0, 0.2);
        padding: 30px;
    }

    .form-label {
        color: #ff7b00;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #ff7b00;
        border-color: #ff7b00;
    }

        .btn-primary:hover {
            background-color: #e66a00;
        }

    .alert {
        border-left: 5px solid #ff7b00;
    }
</style>

<div class="container mt-5" style="max-width:600px;">
    <h2 class="text-center mb-4"><i class="bi bi-person-plus icon"></i> Thêm sinh viên mới</h2>

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.ThongBao
        </div>
    }

    <div class="card">
        <form method="post">
            <div class="mb-3">
                <label class="form-label"><i class="bi bi-upc"></i> Mã sinh viên</label>
                <input type="text" name="MaSoSinhVien" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-person-fill"></i> Họ tên</label>
                <input type="text" name="HoTen" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-book"></i> Ngành học</label>
                <select name="NganhHoc" class="form-select" required>
                    <option value="">-- Chọn ngành --</option>
                    @foreach (var n in nganhList)
                    {
                        <option value="@n">@n</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-gender-ambiguous"></i> Giới tính</label><br />
                <div class="form-check form-check-inline">
                    <input type="radio" name="GioiTinh" value="Nam" class="form-check-input" required />
                    <label class="form-check-label">Nam</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" name="GioiTinh" value="Nữ" class="form-check-input" />
                    <label class="form-check-label">Nữ</label>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-calendar3"></i> Ngày sinh</label>
                <input type="date" name="NgaySinh" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-telephone"></i> Số điện thoại</label>
                <input type="text" name="SoDienThoai" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-envelope"></i> Email</label>
                <input type="email" name="Email" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="bi bi-geo-alt"></i> Địa chỉ</label>
                <input type="text" name="DiaChi" class="form-control" />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save"></i> Lưu sinh viên
                </button>
                <a href="@Url.Action("ThongTinCaNhan", "SinhVien")" class="btn btn-outline-secondary px-4 ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
