@model IEnumerable<KTXSV.Models.Notification>

@{
    ViewBag.Title = "Thông báo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Hiện tại bạn chưa có thông báo nào.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var n in Model.OrderByDescending(x => x.CreatedAt))
            {
                var isUnread = !n.IsRead;
                var itemClass = isUnread ? "list-group-item list-group-item-light fw-bold" : "list-group-item list-group-item-light";

                <a href="#" class="@itemClass list-group-item-action mb-2" style="cursor:pointer; text-decoration:none;"
                   data-bs-toggle="modal" data-bs-target="#modal-@n.NotiID"
                   data-notification-id="@n.NotiID">

                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <h5 class="mb-1 @(isUnread ? "text-primary" : "")">@n.Title</h5>
                        <small class="text-end text-muted">
                            @(n.CreatedAt.HasValue ? n.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "")
                        </small>
                    </div>
                </a>

                <div class="modal fade" id="modal-@n.NotiID" tabindex="-1" aria-labelledby="modalLabel-@n.NotiID" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content border" style="border-color:#EE6823;">
                            <div class="modal-header" style="background-color:#EE6823; color:white;">
                                <h5 class="modal-title" id="modalLabel-@n.NotiID">@n.Title</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body p-4">
                                @Html.Raw(n.Content)
                            </div>
                            <div class="modal-footer d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    Thời gian: @(n.CreatedAt.HasValue ? n.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "")
                                </small>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modals = document.querySelectorAll(".modal");
            modals.forEach(function (modalEl) {
                modalEl.addEventListener('show.bs.modal', function () {
                    var notiId = modalEl.id.split('-')[1];
                    var parentItem = document.querySelector(`[data-bs-target="#${modalEl.id}"]`);

                    // Ajax đánh dấu đã đọc
                    fetch('/ThongBao/MarkAsRead/' + notiId, { method: 'POST' });

                    // Cập nhật giao diện item đã đọc
                    if (parentItem && parentItem.classList.contains('fw-bold')) {
                        parentItem.classList.remove('fw-bold');
                        var titleElement = parentItem.querySelector('h5');
                        if (titleElement) titleElement.classList.remove('text-primary');
                    }
                });
            });
        });
    </script>
}

<style>
    /* Hover nhẹ cho item chưa đọc */
    .list-group-item-action.fw-bold:hover {
        background-color: #f0f5ff;
    }

    /* List-group items bo góc + hiệu ứng chuyển màu */
    .list-group-item {
        border-radius: 0.4rem;
        transition: background-color 0.2s;
    }

    /* Modal body font dễ đọc */
    .modal-body {
        font-size: 1rem;
        line-height: 1.6;
    }
</style>
