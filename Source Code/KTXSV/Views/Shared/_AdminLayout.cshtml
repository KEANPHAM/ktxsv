@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Ký túc xá @ViewBag.Title</title>
    <link rel="icon" type="image/png" href="https://sta.huflit.edu.vn/assets/web/images/huflit-logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/btn1.css" rel="stylesheet" />
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            min-height: 100vh;
            width: 220px;
            background-color: #fff;
            border-right: 2px solid #f1f1f1;
            font-weight:500;
        }

            .sidebar .nav-link {
                display: block;
                color: black !important;
                font-size: 16px;
                border-radius: 10px;
                padding: 10px 15px;
                margin: 4px 0;
                transition: all 0.2s ease-in-out;
            }
                .sidebar .nav-link:hover {
                    background-color: #FFF5EE;
                    font-weight:bold;
                    border-left: 4px solid #EE6823;
                    transform: translateX(2px);
                    color: #ee6823 !important;
                }

                .sidebar .nav-link.active {
                    background-color: #EE6823;
                    color: #fff !important;
                    border-left: 4px solid #EE6823;
                    font-weight: 600;
                }
        .content-area {
            flex-grow: 1;
            padding: 20px;
        }
      
        .btn11 {
            background-color: white !important;
            border: 1px solid #EE6823 !important;
            color: #EE6823;
        }
            .btn11:hover {
                color: #EE6823;
            }
            .btn11:active {
                background-color: white!important;
                color: red!important;
                border: 1px solid red !important;
            }
        

    </style>
</head>

<body class="bg-light d-flex flex-column" style="min-height:100vh;">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm p-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/Admin/Dashboard">
                <img src="https://huflit.edu.vn/wp-content/uploads/2023/04/LOGO-HUFLIT-OFFICIAL.png" width="140" />
                <span class="ms-2 fw-bold text-dark">Trang quản trị KTX</span>
            </a>
            <div class="ms-auto d-flex align-items-center">
                <span class="me-3 text-secondary">Xin chào, @ViewBag.FullName</span>
                <a href="/Account/Index" class="btn btn1 btn11">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <!-- Main Layout -->
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column p-3">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/PendingRegistrations">Phê duyệt đăng ký</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Students">Quản lý sinh viên</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Rooms">Quản lý phòng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Payments">Quản lý thanh toán</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Admin/Notifications">Thông báo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/AdminSupport/Index">Hỗ trợ</a>
                </li>
            </ul>
        </div>

        <!-- Content -->
        <div class="content-area">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center text-secondary py-3 mt-auto">
        <hr />
        <p>&copy; @DateTime.Now.Year - HUFLIT Dormitory Management System</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
