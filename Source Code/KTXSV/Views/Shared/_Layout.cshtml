<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ký túc xá HUFLIT88.COM</title>
    <link rel="icon" type="image/png" href="https://sta.huflit.edu.vn/assets/web/images/huflit-logo.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")

</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg bg-white shadow-sm  rounded-4 px-4 ">
        <div class="container-fluid d-flex align-items-center ms-0">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img width="150" src="https://huflit.edu.vn/wp-content/uploads/2023/04/LOGO-HUFLIT-OFFICIAL.png" />
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse justify-content-end align-items-center" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link text-dark" href="/">Trang chủ</a></li>

                    <li class="nav-item"><a class="nav-link text-dark" href="/StudentFiles/Index">Đăng ký phòng mới</a></li>

                    <li class="nav-item"><a class="nav-link text-dark" href="/Phong/DanhSachPhong">Phòng đã đăng ký</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="/ThanhToan/HoaDon">Thanh toán</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="/ThongBao/ThongBao">Thông báo</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="/HoTro/LichSu">Hỗ trợ</a></li>

                    @if (Session["UserID"] != null)
                    {
                        <li class="nav-item dropdown">
                            <button class="btn btn-outline-dark dropdown-toggle ms-2" id="studentMenu"
                                    data-bs-toggle="dropdown" aria-expanded="false" style="border-radius:20px;font-size:16px">
                                Trang cá nhân
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="studentMenu">
                                <li><a class="dropdown-item" href="/SinhVien/ThongTinCaNhan">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="/SinhVien/ChinhSuaThongTin">Chỉnh sửa thông tin</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/TaiKhoan/DangXuat">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="/TaiKhoan/DangNhap" class="btn btn-dark ms-2 m-o" style="border-radius: 20px; font-size: 20px">Đăng nhập</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <div class="container body-content">
            @RenderBody()
        </div>

    </main>
    <hr />
    <footer class="mx-auto ">
        <p>&copy; @DateTime.Now.Year - HO CHI MINH UNIVERSITY OF FOREIGN LANGUAGE AND INFORMATION TECHNOLOGY</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
