@model IEnumerable<KTXSV.Models.Room>
@{
    ViewBag.Title = "Đăng ký phòng ký túc xá";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/btn1.css" rel="stylesheet" />
<style>


    .bed-select.active {
        background-color: #EE6823 !important;
        color: #fff !important;
        border: none !important;
        box-shadow: 0 2px 6px rgba(0,0,0,0.3);
    }

    .list-group-item {
        border: none !important;
    }

    .card {
        border: none !important;
        border-radius: 20px !important;
        overflow: hidden;
    }

    .card-header {
        border-top-left-radius: 20px !important;
        border-top-right-radius: 20px !important;
    }

    .card-footer {
        border-bottom-left-radius: 20px !important;
        border-bottom-right-radius: 20px !important;
    }

    .list-group-item {
        border: none !important;
        background-color: transparent !important;
    }

    .card-header {
        background-color: rgb(239 103 0 / 7%) !important;
    }
</style>
<main class="container my-5">


    @if (TempData["Success"] != null)
    {
        <div class=" alert alert-success px-3 py-1 ms-auto rounded-5" style="width:fit-content;">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <section class="bg-white p-4 rounded-4 shadow-sm mb-4">
        <h4 class="fw-bold mb-3">Lọc phòng trống</h4>

        @using (Html.BeginForm("DangKyPhong", "Phong", FormMethod.Get))
        {
            <div class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Giới tính</label>
                    <select name="gender" class="form-select">
                        <option value="">--Tất cả--</option>
                        <option value="Male">Nam</option>
                        <option value="Female">Nữ</option>
                    </select>
                </div>
                @*<div class="col-md-3">
                        <label class="form-label">Tòa nhà</label>
                        <select name="building" class="form-select">
                            <option value="">Tất cả</option>
                            <option value="A">Tòa A</option>
                            <option value="B">Tòa B</option>
                        </select>
                    </div>*@
                <div class="col-md-5">
                    <label class="form-label">Loại phòng</label>
                    <select class="form-select" name="capacity">
                        <option value="">--Tất cả--</option>
                        <option value="4">Phòng 4 người</option>
                        <option value="6">Phòng 6 người</option>
                        <option value="8">Phòng 8 người</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn1 w-100">Lọc</button>
                </div>
            </div>
        }
    </section>

    <section class="mt-5">
        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">Không tìm thấy phòng nào phù hợp</div>
        }
        else
        {
            foreach (var buildingGroup in Model.GroupBy(p => p.Building).OrderBy(g => g.Key))
            {
                <div class="mb-5">
                    <h2 class="fw-bold  pb-2 mb-4" style="color:#EE6823">Tòa @buildingGroup.Key</h2>

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-5">
                        @foreach (var phong in buildingGroup.OrderBy(p => p.RoomNumber))
                        {
                            var slotsAvailable = phong.Capacity - (phong.Occupied ?? 0);
                            bool isAvailable = phong.Status == "Available" && slotsAvailable > 0;

                            <div class="col">
                                <div class="card h-100 shadow-sm border-light-subtle rounded-3">
                                    <div class="card-header p-3 d-flex justify-content-between align-items-center ">
                                        <h5 class="card-title mb-0 fw-bold">Phòng @phong.RoomNumber</h5>
                                        @if (isAvailable)
                                        {
                                            <span class="badge bg-success-subtle text-success-emphasis rounded-pill ">Còn trống</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill">Đã đầy</span>
                                        }
                                    </div>

                                    <div class="card-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <i class="bi bi-people-fill text-muted me-2"></i>
                                                <strong>Giới tính:</strong> @(phong.Gender == "Male" ? "Nam" : "Nữ")
                                            </li>
                                            <li class="list-group-item">
                                                <i class="bi bi-grid-3x3-gap-fill text-muted me-2"></i>
                                                <strong>Sức chứa:</strong> @phong.Capacity người
                                            </li>
                                            <li class="list-group-item">
                                                <i class="bi bi-person-check-fill text-muted me-2"></i>
                                                <strong>Chỗ còn trống:</strong> <span class="fw-bold text-success">@slotsAvailable</span>
                                            </li>
                                            <li class="list-group-item">
                                                <i class="bi bi-cash-coin text-muted me-2"></i>
                                                <strong>Giá:</strong> <span class="fw-bold text-danger">@string.Format("{0:N0}", phong.Price) VNĐ/tháng</span>
                                            </li>

                                            @{
                                                int perRow;
                                                if (phong.Capacity == 8)
                                                {
                                                    perRow = 4;
                                                }
                                                else if (phong.Capacity == 6)
                                                {
                                                    perRow = 3;
                                                }
                                                else if (phong.Capacity == 4)
                                                {
                                                    perRow = 4;
                                                }
                                                else
                                                {
                                                    perRow = 4;
                                                }

                                                var bedList = phong.Beds.OrderBy(b => b.BedNumber).ToList();
                                            }

                                            <div class="mt-2">
                                                <strong>Giường:</strong>

                                                <div class="d-flex flex-column gap-2 mt-2">
                                                    @for (int i = 0; i < bedList.Count; i += perRow)
                                                    {
                                                        <div class="d-flex justify-content-center flex-wrap gap-2">

                                                            @foreach (var bed in bedList.Skip(i).Take(perRow))
                                                            {
                                                                if (bed.IsOccupied ?? false)
                                                                {
                                                                    <span class="badge bg-secondary px-3 py-2">@bed.BedNumber</span>
                                                                }
                                                                else
                                                                {
                                                                    <button type="button"
                                                                            class="btn btn-outline-success bed-select  px-3 py-2"
                                                                            style="font-size:12px !important"
                                                                            data-bedid="@bed.BedID"
                                                                            data-roomid="@phong.RoomID">
                                                                        @bed.BedNumber
                                                                    </button>
                                                                }
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>

                                        </ul>
                                    </div>

                                    <div class="card-footer bg-white border-0 p-3">
                                        @if (isAvailable)
                                        {
                                            <form action="/Phong/DangKyPhong" method="post" class="registerForm">
                                                @Html.Hidden("roomId", phong.RoomID)
                                                <input type="hidden" name="bedId" class="selected-bed-id" />

                                                <button type="button" class="btn btn1 w-100 btnRegister"
                                                        data-room="@phong.RoomNumber"
                                                        data-building="@phong.Building"
                                                        data-capacity="@phong.Capacity"
                                                        data-available="@slotsAvailable">
                                                    <i class="bi bi-check-circle"></i> Đăng ký
                                                </button>
                                            </form>


                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary w-100" disabled>Không khả dụng</button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".bed-select").forEach(btn => {
                btn.addEventListener("click", function () {
                    const card = this.closest(".card");
                    card.querySelectorAll(".bed-select").forEach(b => b.classList.remove("active"));
                    this.classList.add("active");
                    card.querySelector(".selected-bed-id").value = this.dataset.bedid;
                });
            });

            document.querySelectorAll(".btnRegister").forEach(btn => {
                btn.addEventListener("click", function () {
                    const form = this.closest("form");
                    const bedId = form.querySelector(".selected-bed-id").value;
                    const room = this.dataset.room;
                    const building = this.dataset.building;
                    const capacity = this.dataset.capacity;
                    const available = this.dataset.available;

                    if (!bedId) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Chưa chọn giường!',
                            text: 'Vui lòng chọn giường trước khi đăng ký.',
                            confirmButtonColor: '#EE6823'
                        });
                        return;
                    }

                    Swal.fire({
                        title: `<h4 class="fw-bold" style="color:#EE6823;">Xác nhận đăng ký phòng ${room}</h4>`,
                        html: `
                            <div style="background-color:#fff8f4; border:1px solid #ffe0cc; border-radius:10px; padding:16px;">
                                <p style="margin:0 0 8px 0;">🏢 <b>Tòa:</b> ${building}</p>
                                <p style="margin:0 0 8px 0;">🚪 <b>Phòng:</b> ${room}</p>
                                <p style="margin:0 0 8px 0;">🛏️ <b>Giường:</b> G${bedId}</p>
                                <p style="margin:0;">👥 <b>Sức chứa:</b> ${capacity} người - <b>Còn trống:</b> ${available}</p>
                            </div>
                        `,
                        showCancelButton: true,
                        confirmButtonText: '<i class="bi bi-send-check-fill me-2"></i>Đăng ký',
                        cancelButtonText: '<i class="bi bi-x-circle"></i> Hủy',
                        buttonsStyling: false,
                        customClass: {
                            confirmButton: 'btn btn1 px-4 me-2',
                            cancelButton: 'btn btn-secondary rounded-3 ms-2 px-4'
                        }
                    }).then(result => {
                        if (result.isConfirmed) form.submit();
                    });
                });
            });
        });
    </script>



</main>
