@model IEnumerable<KTXSV.Models.Registration>

@{
    ViewBag.Title = "Phòng đã đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.css" />
<link href="~/Content/btn1.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.js"></script>
<style>
    .jconfirm .jconfirm-title {
        display: flex !important;
        justify-content: center !important;
        color: #EE6823 !important;
        font-weight: bold;
        font-size: 18px;
    }

    .jconfirm .jconfirm-buttons {
        padding: 0 !important;
    }

    .jconfirm .jconfirm-box {
        padding: 16px !important;
        border: 1px solid #ffe0cc;
        border-radius: 20px !important;
    }

    .jconfirm .jconfirm-content {
        font-size: 16px;
        color: #333;
    }

    .jconfirm .btn1-danger {
        border-radius: 10px !important;
        transition: all 0.15s ease-in-out;
    }

    .jconfirm .btn1,
    .jconfirm .btn1-danger,
    .jconfirm .btn1-cancel {
        text-transform: none !important;
        font-weight: normal !important;
    }

    .btn1-cancel {
        background-color: #6c757d !important;
        color: white !important;
        border-radius: 10px !important;
        transition: all 0.15s ease-in-out;
    }

        .btn1-cancel:hover,
        .btn1-cancel:active {
            background-color: #6c757d !important;
            color: white !important;
        }
</style>
<main class="container my-5">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger  text-center">@TempData["Error"]</div>
    }
    <h1 class="text-center fw-bold mb-4" style="color:#EE6823">Danh sách phòng đã đăng ký</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Bạn chưa đăng ký phòng nào.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="rounded-4 bg-white shadow-sm p-4 mb-3 border-start border-4 border-warning-subtle">
                <div class="row">
                    <div class="col-md-4">
                        <p><strong>Tòa nhà:</strong> @item.Room.Building</p>
                        <p><strong>Số phòng:</strong> @item.Room.RoomNumber</p>
                        <p><strong>Ngày đăng ký:</strong> @item.StartDate.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="col-md-4">
                        <p><strong>Sức chứa:</strong> @item.Room.Capacity người</p>
                        <p><strong>Đã ở:</strong> @(item.Room.Occupied ?? 0)</p>
                    </div>

                    <div class="col-md-4 text-md-end">
                        <p><strong>Trạng thái:</strong></p>

                        @if (item.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                        }
                        else if (item.Status == "Active")
                        {
                            <span class="badge bg-success">Đang ở</span>
                        }
                        else if (item.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Bị từ chối</span>
                        }
                        else if (item.Status == "Ended")
                        {
                            <span class="badge bg-secondary">Đã kết thúc</span>
                        }
                        else if (item.Status == "Canceled")
                        {
                            <span class="badge bg-danger-subtle">Đã hủy</span>
                        }


                        @if (item.Status == "Pending")
                        {

                            <form action="/Phong/HuyDangKy" method="post" class="cancelForm">
                                @Html.Hidden("regId", item.RegID)
                                @Html.Hidden("bedId", item.BedID)
                                <button type="button" class="btn btn-outline-danger btn-sm mt-2 btnCancel">
                                    <i class="bi bi-x-circle"></i> Hủy yêu cầu
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    }
</main>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".btnCancel").forEach(btn => {
            btn.addEventListener("click", function () {
                const form = this.closest("form");

                $.confirm({
                    title: 'Hủy yêu cầu',
                    content: 'Xác nhận hủy đăng ký phòng?',
                    buttons: {
                        confirm: {
                            text: 'Hủy đăng ký',
                            btnClass: 'btn1 btn1-danger',
                            action: function () {
                                form.submit();
                            }
                        },
                        cancel: {
                            text: 'Không',
                            btnClass: 'btn1 btn1-cancel'
                        }
                    },
                    columnClass: 'small',
                    backgroundDismiss: true
                });
            });
        });
    });
</script>
