@model IEnumerable<KTXSV.Models.Registration>

@{
    ViewBag.Title = "Phòng đã đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.css" />
<link href="~/Content/btn1.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.js"></script>
<style>
    .jconfirm .jconfirm-title {
        display: flex !important;
        justify-content: center !important;
        color: #EE6823 !important;
        font-weight: bold;
        font-size: 18px;
    }

    .jconfirm .jconfirm-buttons {
        padding: 0 !important;
    }

    .jconfirm .jconfirm-box {
        padding: 16px !important;
        border: 1px solid #ffe0cc;
        border-radius: 20px !important;
    }

    .jconfirm .jconfirm-content {
        font-size: 16px;
        color: #333;
    }

    .jconfirm .btn1-danger {
        border-radius: 10px !important;
        transition: all 0.15s ease-in-out;
    }

    .jconfirm .btn1,
    .jconfirm .btn1-danger,
    .jconfirm .btn1-cancel {
        text-transform: none !important;
        font-weight: normal !important;
    }

    .btn1-cancel {
        background-color: #6c757d !important;
        color: white !important;
        border-radius: 10px !important;
        transition: all 0.15s ease-in-out;
    }

        .btn1-cancel:hover,
        .btn1-cancel:active {
            background-color: #6c757d !important;
            color: white !important;
        }

    .label {
        display: inline-block;
        width: 120px;
    }

    .badge {
        margin: 0 0 16px;
        border-radius: 10px;
        padding: 6px 12px;
    }
</style>
<main class="container my-5">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger  text-center">@TempData["Error"]</div>
    }
    <h1 class="text-center fw-bold mb-4" style="color:#EE6823">Danh sách phòng đã đăng ký</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Bạn chưa đăng ký phòng nào.
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="rounded-4 bg-white shadow-sm p-4 mb-3 border-start border-4 border-warning-subtle">
                <div class="row align-items-stretch">
                    <div class="col-md-5 d-flex flex-column justify-content-between">
                        <p style="margin-bottom:0"><strong class="label">Tòa:</strong><span class="value"> @(item.Room.Building)</span></p>
                        <p style="margin-bottom:0"><strong class="label">Giường:</strong><span class="value"> @(item.BedID)</span></p>
                        <p style="margin-bottom:0"><strong class="label">Ngày bắt đầu:</strong> <span class="value">@item.StartDate.ToString("dd/MM/yyyy")</span></p>
                    </div>

                    <div class="col-md-5 d-flex flex-column justify-content-between">
                        <p><strong class="label">Số phòng:</strong> <span class="value">@item.Room.RoomNumber</span></p>
                        <p><strong class="label">Đã ở:</strong><span class="value"> @(item.Room.Occupied ?? 0)/@item.Room.Capacity</span></p>
                        <p style="margin-bottom:0">
                            <strong class="label">Ngày kết thúc:</strong>
                            <span class="value">@((item.EndDate.HasValue) ? item.EndDate.Value.ToString("dd/MM/yyyy") : "-")</span>
                        </p>

                    </div>

                    <div class="col-md-2  text-md-end">

                        @if (item.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark mb-2">Chờ duyệt</span>
                        }
                        else if (item.Status == "Active")
                        {
                            <span class="badge bg-success mb-2">Đang ở</span>
                        }
                        else if (item.Status == "Rejected")
                        {
                            <span class="badge bg-danger mb-2">Bị từ chối</span>
                        }
                        else if (item.Status == "Ended")
                        {
                            <span class="badge bg-secondary mb-2">Đã kết thúc</span>
                        }
                        else if (item.Status == "Canceled")
                        {
                            <span class="badge bg-danger-subtle mb-2">Đã hủy</span>
                        }
                        else if (item.Status == "Expiring")
                        {
                            <span class="badge bg-warning mb-2">Sắp hết hạn</span>
                        }

                        <!-- Trạng thái thanh toán -->
                        <div class="mt-2">
                            @if (item.Payments != null && item.Payments.Any())
                            {
                                foreach (var pay in item.Payments)
                                {
                                    string badgeClass;
                                    string statusText;

                                    if (pay.Status == "Paid")
                                    {
                                        badgeClass = "bg-success";
                                        statusText = "Đã thanh toán";
                                    }
                                    else if (pay.Status == "Unpaid")
                                    {
                                        badgeClass = "bg-warning text-dark";
                                        statusText = "Chưa thanh toán";
                                    }
                                    else if (pay.Status == "Overdue")
                                    {
                                        badgeClass = "bg-danger";
                                        statusText = "Quá hạn";
                                    }
                                    else
                                    {
                                        badgeClass = "bg-secondary";
                                        statusText = pay.Status;
                                    }

                                    <span class="badge @badgeClass mb-1">@statusText</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">Chưa có hóa đơn</span>
                            }
                        </div>


                        @if (item.Status == "Pending")
                        {

                            <form action="/Phong/HuyDangKy" method="post" class="cancelForm">
                                @Html.Hidden("regId", item.RegID)
                                @Html.Hidden("bedId", item.BedID)
                                <button style="border-radius: 12px !important" type="button" class="btn btn-outline-danger btn-sm  btnCancel">
                                    <i class="bi bi-x-circle"></i> Hủy yêu cầu
                                </button>
                            </form>
                        }
                        @if (item.Status == "Expiring")
                        {
                            <form action="@Url.Action("GiaHanPhong","Phong")" method="get" class="extendForm mt-2">
                                @Html.Hidden("regId", item.RegID)
                                <button type="submit" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-arrow-clockwise"></i> Gia hạn
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    }
</main>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".btnCancel").forEach(btn => {
            btn.addEventListener("click", function () {
                const form = this.closest("form");

                $.confirm({
                    title: 'Hủy yêu cầu',
                    content: 'Xác nhận hủy đăng ký phòng?',
                    buttons: {
                        confirm: {
                            text: 'Hủy đăng ký',
                            btnClass: 'btn1 btn1-danger',
                            action: function () {
                                form.submit();
                            }
                        },
                        cancel: {
                            text: 'Không',
                            btnClass: 'btn1 btn1-cancel'
                        }
                    },
                    columnClass: 'small',
                    backgroundDismiss: true
                });
            });
        });
    });
</script>
