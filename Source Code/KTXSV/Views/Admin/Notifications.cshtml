@model IEnumerable<KTXSV.Models.Notification>

@{
    ViewBag.Title = "Thông báo của Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #EE6823;
        --unread-bg: #fff9f5;
    }

    .bg-primary-custom {
        background-color: var(--primary-color) !important;
    }

    .text-primary-custom {
        color: var(--primary-color) !important;
    }

    .badge-primary-custom {
        background-color: var(--primary-color);
        color: #fff;
    }

    .notification-card {
        transition: all 0.2s;
        border-radius: 0.5rem;
    }

        .notification-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.1);
        }

    .unread {
        background-color: var(--unread-bg);
        border-left: 5px solid var(--primary-color);
    }
    .modal-body .d-flex > div {
        margin-bottom: 0 !important;
    }

</style>

<div class="container mt-5">

    <!-- Nút gửi thông báo mới -->
    <div class="mb-4">
        <button type="button" class="btn bg-primary-custom text-white" data-bs-toggle="modal" data-bs-target="#createNotificationModal">
            <i class="bi bi-send me-1"></i> Gửi thông báo mới
        </button>
    </div>

    <!-- Modal tạo thông báo -->
    <div class="modal fade" id="createNotificationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                @using (Html.BeginForm("CreateNotification", "Admin", FormMethod.Post))
                {@Html.AntiForgeryToken()
                <div class="modal-header bg-primary-custom text-white">
                    <h5 class="modal-title">Tạo thông báo mới</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex flex-wrap gap-3">
                        <div style="flex:1; min-width:180px;">
                            <label class="form-label">Tiêu đề</label>
                            <input type="text" name="Title" class="form-control" required />
                        </div>
                        <div style="flex:2; min-width:250px;">
                            <label class="form-label">Nội dung</label>
                            <textarea name="Content" class="form-control" rows="4" required></textarea>
                        </div>
                        <div style="flex:1; min-width:150px;">
                            <label class="form-label">Gửi tới</label>
                            <select name="TargetType" id="TargetType" class="form-select" required>
                                <option value="All">Tất cả sinh viên</option>
                                <option value="One">Một sinh viên cụ thể</option>
                            </select>
                        </div>
                        <div id="StudentSelect" style="flex:1; min-width:150px; display:none;">
                            <label class="form-label">Chọn sinh viên</label>
                            <select name="UserID" class="form-select">
                                <option value="">-- Chọn sinh viên --</option>
                                @foreach (var s in ViewBag.StudentList as List<KTXSV.Models.User>)
                                {
                                    <option value="@s.UserID">@s.FullName (@s.Username)</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn bg-primary-custom text-white">Gửi</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                </div>
            }
            </div>
        </div>
    </div>

    <!-- Danh sách thông báo -->
    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm p-4 text-center">
            <i class="bi bi-info-circle-fill me-2"></i> Hiện tại chưa có thông báo nào.
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-10">
                @foreach (var n in Model.OrderByDescending(x => x.CreatedAt))
                {
                    var unreadClass = !n.IsRead ? "unread" : "";
                    <div class="card mb-3 shadow-sm notification-card @unreadClass"
                         data-bs-toggle="modal"
                         data-bs-target="#modal-@n.NotiID"
                         data-notification-id="@n.NotiID"
                         style="cursor:pointer;">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title mb-1">
                                    @if (!n.IsRead)
                                    {<span class="badge badge-primary-custom me-2">Mới</span>}
                                    @n.Title
                                </h5>
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>@(n.CreatedAt.HasValue ? n.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "")
                                </small>
                            </div>
                            <a href="javascript:void(0);" class="text-decoration-none text-primary-custom">
                                Xem chi tiết <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Modal chi tiết -->
                    <div class="modal fade" id="modal-@n.NotiID" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content">
                                <div class="modal-header bg-primary-custom text-white">
                                    <h5 class="modal-title">@n.Title</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">@Html.Raw(n.Content)</div>
                                <div class="modal-footer d-flex justify-content-between">
                                    <small class="text-muted">
                                        Thời gian: @(n.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "")
                                    </small>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

</div>

@section Scripts{
    <script>
        // Hiện/ẩn select sinh viên
        document.getElementById("TargetType").addEventListener("change", function () {
            document.getElementById("StudentSelect").style.display = this.value === "One" ? "block" : "none";
        });

        // Đánh dấu đã đọc khi mở modal
        document.querySelectorAll(".modal").forEach(m => {
            m.addEventListener("show.bs.modal", function () {
                var id = this.id.split("-")[1];
                var card = document.querySelector(`[data-notification-id="${id}"]`);
                fetch('/Admin/MarkAsRead/' + id, { method: 'POST' });

                if (card && card.classList.contains("unread")) {
                    card.classList.remove("unread");
                }
            });
        });
    </script>
}
