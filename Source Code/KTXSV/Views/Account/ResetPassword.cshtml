@{
    Layout = null;
    ViewBag.Title = "Đặt lại mật khẩu";
}
<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="forgot-container">
        <img src="~/Image/HUFLIT_Logo_English_Official.png" class="logo" />
        <div class="head">

            <div>
                <h4>Đặt lại mật khẩu</h4>
                <div class="desc">
                    Nhập mật khẩu mới (ít nhất 8 ký tự, có chữ hoa, số và ký tự đặc biệt)
                </div>
                <div class="desc">
                    -----------
                </div>
            </div>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label class="form-label small-muted">Mật khẩu mới</label>
                <input type="password" name="NewPassword" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label small-muted">Xác nhận mật khẩu</label>
                <input type="password" name="ConfirmPassword" class="form-control" required />
            </div>

            <button class="btn-save" type="submit">Cập nhật mật khẩu</button>
            <div class="hint">Bạn sẽ được chuyển về trang đăng nhập sau khi thay đổi thành công.</div>
        }
    </div>
    <style>
        body {
            /* Set hình background của bạn ở đây */
            background: url('../../image/huflit_clean_nobus.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .forgot-container {
            background: rgba(255, 255, 255, 0.95); /* Khung sáng, hơi trong suốt */
            padding: 40px 50px;
            border-radius: 15px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.3);
            width: 380px;
            text-align: center;
            transition: all 0.3s ease;
        }

            .forgot-container h2 {
                color: #003366;
                font-weight: 700;
                margin: 20px 0;
            }

        .logo {
            width: 100px;
            margin-bottom: 15px;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            margin-bottom: 15px;
            font-size: 15px;
            box-sizing: border-box;
            outline: none;
            transition: all 0.2s;
        }

            .form-control:focus {
                border-color: #00c8ff;
                box-shadow: 0 0 6px #00c8ff;
            }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            margin-bottom: 15px;
            font-size: 15px;
            box-sizing: border-box;
            outline: none;
            transition: all 0.2s;
        }

            .form-control:focus {
                border-color: #00c8ff;
                box-shadow: 0 0 6px #00c8ff;
            }

        .btn-save {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 6px;
            font-weight: 600;
            background-color: #00c8ff;
            color: #000;
            cursor: pointer;
            margin-bottom: 10px;
            transition: 0.3s;
        }

            .btn-save:hover {
                background-color: #00a8d1;
            }

        .btn-back {
            display: inline-block;
            width: 100%;
            padding: 12px 1;
            border-radius: 6px;
            background-color: #003366;
            color: #fff;
            text-decoration: none;
            font-weight: 500;
            transition: 0.3s;
        }

            .btn-back:hover {
                background-color: #0055a5;
            }

        .alert {
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 10px;
            font-size: 14px;
        }

        .alert-danger {
            background: rgba(255, 77, 77, 0.15);
            color: #ff6b6b;
            border: 1px solid #ff6b6b;
        }

        .alert-success {
            background: rgba(0, 255, 128, 0.15);
            color: #00ff9d;
            border: 1px solid #00ff9d;
        }
    </style>
</body>
</html>
