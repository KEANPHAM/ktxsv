@model KTXSV.Models.User
@{
    ViewBag.Title = "Chỉnh Sửa Thông Tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bao quanh toàn bộ container để canh giữa -->
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #fff8f0;">
    <div style="width: 100%; max-width: 500px;">

        <h2 class="text-center mb-4" style="color: #FF6700; font-weight:bold;">Chỉnh Sửa Thông Tin Cá Nhân</h2>

        <!-- Form với khung, shadow, background trắng -->
        <div class="card shadow-lg border border-3" style="border-color:#FF6700; border-radius: 20px; background-color: #ffffff; padding: 40px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.UserID)

                <div class="mb-4">
                    <label class="form-label fw-bold">
                        <i class="fa fa-user me-2" style="color:#FF6700; font-size: 1.3rem;"></i>Họ tên
                    </label>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control form-control-lg", placeholder = "Nhập họ tên", style = "border-color:#FF6700; transition: 0.3s;" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">
                        <i class="fa fa-venus-mars me-2" style="color:#FF6700; font-size: 1.3rem;"></i>Giới tính
                    </label>
                    @Html.DropDownListFor(m => m.Gender, new SelectList(new[] { "Male", "Female" }), "-- Chọn giới tính --", new { @class = "form-select form-select-lg", style = "border-color:#FF6700;" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">
                        <i class="fa fa-envelope me-2" style="color:#FF6700; font-size: 1.3rem;"></i>Email
                    </label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Nhập email", style = "border-color:#FF6700;" })
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">
                        <i class="fa fa-phone me-2" style="color:#FF6700; font-size: 1.3rem;"></i>Số điện thoại
                    </label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-lg", placeholder = "Nhập số điện thoại", style = "border-color:#FF6700;" })
                </div>

                <div class="d-flex justify-content-between mt-5">
                    <button type="submit" class="btn btn-lg text-white" style="background: linear-gradient(45deg, #FF6700, #FFA500); border-radius: 50px; padding: 10px 30px; font-weight:bold; transition: 0.3s;">
                        <i class="fa fa-save me-2"></i>Lưu thay đổi
                    </button>
                    <a href="@Url.Action("ThongTinCaNhan", "SinhVien")" class="btn btn-outline-secondary btn-lg" style="border-radius:50px; padding: 10px 30px;">
                        <i class="fa fa-times me-2"></i>Hủy
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Chèn Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- Hiệu ứng hover cho input và button -->
<style>
    .form-control:hover, .form-select:hover {
        box-shadow: 0 0 8px rgba(255,103,0,0.5);
        border-color: #FF6700 !important;
    }

    .btn:hover {
        transform: scale(1.05);
    }
</style>
